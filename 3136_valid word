                } else if (Character.isLetter(ch)) {
                    hasConsonant = true;
                }
            } else {
                return false; // Invalid character
            }
        }

        return hasVowel && hasConsonant;
    }

    private boolean isVowel(char ch) {
        ch = Character.toLowerCase(ch);
        return "aeiou".indexOf(ch) != -1;
    }
}
